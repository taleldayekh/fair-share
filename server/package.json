    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "jest": "^26.0.1",
    "prettier": "2.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  }
